@{
    ViewBag.Title = "Simulador de Temperatura";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Simulador</title>
</head>
<body>
    <div class="jumbotron">
        <h1>Simulador de Temperatura</h1>
        <p class="lead">Aplicación web que simula la temperatura del agua dentro de un tanque respecto del tiempo y temperatura deseada.</p>
    </div>


    <div class="bodycontent">
        <h2>Configuración Inicial</h2>
        <br />
        <hr>
        <div class="row">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="control-label col-sm-4" for="CmaximaTanque">Capacidad Máxima del tanque </label>
                    <div class="col-sm-3">
                        <input type="number" class="form-control" id="CmaximaTanque" placeholder="Capacidad Máxima del tanque(Litros)">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="TinicialTanque">Temperatura inicial del Tanque </label>
                    <div class="col-sm-3">
                        <input type="number" class="form-control" id="TinicialTanque" placeholder="Temperatura inicial del Tanque (C°)">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="Mtanque">Material del Tanque</label>
                    <div class="col-sm-3">
                        <select class="form-control" id="Select MaterialTanque">
                            <option value="one">Aluminio</option>
                            <option value="two">Custom</option>
                            <option value="two">Metal</option>
                            <option value="three">Plastico</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="Rtanque">Resistencia</label>
                    <div class="col-sm-3">
                        <select class="form-control" id="SelectResistencia">
                            <option value="one">Pequeña</option>
                            <option value="two">Mediana</option>
                            <option value="two">Grande</option>
                            <option value="three">Custom</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="Mlinicial">Cantidad de agua inicial</label>
                    <div class="col-sm-3">
                        <input type="number" class="form-control" id="Mlinicial" placeholder="Cantidad de agua inicial (ml)">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="Mlsegundos">Cantidad de agua por segundo</label>
                    <div class="col-sm-3">

                        <input type="number" class="form-control" id="Mlsegundos" placeholder="Cantidad de agua/segundo (ml)">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-7 col-sm-10">
                        <p>
                            <asp:textbox runat="server" id="Simular" />
                            <input type="submit" class="btn btn-primary btn-large" value="Simular" />
                        </p>
                    </div>
                </div>

            </form>
        </div>
    </div>



</body>
</html>


